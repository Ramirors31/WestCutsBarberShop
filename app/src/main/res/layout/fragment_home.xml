<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <TextView
        android:id="@+id/homeText"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Est. 2021"
        android:textSize="36sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/welcomeImage"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeText"
        android:src="@drawable/inicio"/>

    <TextView
        android:id="@+id/quienesSomos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/welcomeImage"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="¿Quienes somos?"
        android:textSize="32dp"
        />

    <TextView
        android:id="@+id/descripcionTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Somos una barberia ubicada en San Nicolás de los garza con los cortes mas modernos y el mejor servicio, conocenos y agenda tu cita."
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quienesSomos" />

    <ImageView
        android:id="@+id/phoneIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/descripcionTexto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/phoneNumber"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_phone"/>
    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8115358595"
        app:layout_constraintTop_toBottomOf="@id/descripcionTexto"
        app:layout_constraintLeft_toRightOf="@id/phoneIcon"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/locationIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_location"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/phoneIcon"
        app:layout_constraintRight_toLeftOf="@id/direccionText"
        />

    <TextView
        android:id="@+id/direccionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Av. Romulo Garza #4000"
        app:layout_constraintLeft_toRightOf="@id/locationIcon"
        app:layout_constraintTop_toBottomOf="@id/phoneNumber" />
    <TextView
        android:id="@+id/nuestrosBarberos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/direccionText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Conoce a nuestros barberos"
        android:textSize="32dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>